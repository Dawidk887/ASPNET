@model LabEIGHTandNINE.MovieModel

<h1>Dodaj nowy film</h1>

<form asp-controller="Movie" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <span asp-validation-for="Title" class="text-danger"></span>
        <input class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label asp-for="Overview"></label>
        <span asp-validation-for="Overview" class="text-danger"></span>
        <textarea class="form-control" asp-for="Overview"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="CompanyId"></label>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
        <input class="form-control" asp-for="CompanyId" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        <input class="form-control" asp-for="ReleaseDate" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Budget"></label>
        <span asp-validation-for="Budget" class="text-danger"></span>
        <input class="form-control" asp-for="Budget" />
    </div>

    <div class="form-group">
        <label asp-for="Revenue"></label>
        <span asp-validation-for="Revenue" class="text-danger"></span>
        <input class="form-control" asp-for="Revenue" />
    </div>

    <div class="form-group">
        <label asp-for="Runtime"></label>
        <span asp-validation-for="Runtime" class="text-danger"></span>
        <input class="form-control" asp-for="Runtime" />
    </div>

    <div class="form-group">
        <label asp-for="MovieStatus"></label>
        <span asp-validation-for="MovieStatus" class="text-danger"></span>
        <input class="form-control" asp-for="MovieStatus" />
    </div>

    <div class="form-group">
        <label asp-for="Tagline"></label>
        <span asp-validation-for="Tagline" class="text-danger"></span>
        <input class="form-control" asp-for="Tagline" />
    </div>

    <div class="form-group">
        <label asp-for="VoteAverage"></label>
        <span asp-validation-for="VoteAverage" class="text-danger"></span>
        <input class="form-control" asp-for="VoteAverage" />
    </div>

    <div class="form-group">
        <label asp-for="VoteCount"></label>
        <span asp-validation-for="VoteCount" class="text-danger"></span>
        <input class="form-control" asp-for="VoteCount" />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
