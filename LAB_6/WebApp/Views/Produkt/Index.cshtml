@model IEnumerable<Data.Entities.ProduktEntity>

<h1>Lista produktów</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Producent</th>
            <th>Data produktu</th>
            <th>Opis</th>
            <th>Organizacja</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produkt in Model)
        {
            <tr>
                <td>@produkt.Id</td>
                <td>@produkt.Name</td>
                <td>@produkt.Price</td>
                <td>@produkt.Producent</td>
                <td>@produkt.Produktdate.ToShortDateString()</td>
                <td>@produkt.Description</td>
                <td>
                    @if (produkt.Organization != null)
                    {
                        @($"{produkt.Organization.Title} ({produkt.OrganizationId})")
                    }
                    else
                    {
                        <span class="text-danger">Brak organizacji</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@produkt.Id" class="btn btn-sm btn-info">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@produkt.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@produkt.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Dodaj nowy produkt</a>
